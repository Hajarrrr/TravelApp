<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="4"
        tools:context=".GridXMLActivity"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="93dp"
            android:layout_height="18dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="  Nom Agence:"
            app:layout_constraintEnd_toStartOf="@+id/textView21"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="129dp" />

        <TextView
            android:id="@+id/nom_agence"
            android:layout_width="115dp"
            android:layout_height="28dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:padding="8dp"
            android:text="Title"
            android:textColor="#FAF8F8"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/prix"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="167dp"
        android:layout_height="16dp"
        android:text="  Prix:"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="129dp" />

        <TextView
            android:id="@+id/prix"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginTop="4dp"
            android:padding="8dp"
            android:text="Description.."
            android:textColor="#FDFDFD"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView21"
            tools:layout_editor_absoluteX="185dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="164dp"
        android:layout_height="21dp"
        android:text="  Destination:"
        app:layout_constraintTop_toBottomOf="@+id/prix"
        tools:layout_editor_absoluteX="185dp" />

        <TextView
            android:id="@+id/destination"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:padding="8dp"
            android:text="Description.."
            android:textColor="#FDFDFD"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            tools:layout_editor_absoluteX="185dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="124dp"
        android:layout_height="21dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="  Periode:"
        app:layout_constraintEnd_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/nom_agence" />

        <TextView
            android:id="@+id/periode"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:padding="8dp"
            android:text="Description.."
            android:textColor="#FDFDFD"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/destination"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="127dp"
        android:layout_height="19dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="  Nombre de places:"
        app:layout_constraintEnd_toStartOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/periode" />

        <TextView
            android:id="@+id/nombre_places"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:padding="8dp"
            android:text="Description.."
            android:textColor="#FDFDFD"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/description"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="162dp"
        android:layout_height="19dp"
        android:text="  Description:"
        app:layout_constraintTop_toBottomOf="@+id/destination"
        tools:layout_editor_absoluteX="185dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:padding="8dp"
            android:text="Description.."
            android:textColor="#FDFDFD"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView19"
            tools:layout_editor_absoluteX="185dp" />
</GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>