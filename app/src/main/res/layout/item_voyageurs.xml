<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="13dp"
    app:cardBackgroundColor="#d6d7d7"
    app:cardElevation="8dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="4">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="93dp"
            android:layout_height="18dp"
            android:text="Nom :"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_constraintEnd_toStartOf="@+id/textView21"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/nom"
            android:layout_width="115dp"
            android:layout_height="42dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:padding="8dp"
            android:text="Nom"
            android:textColor="#de9090"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/nom"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="Cin :" />

        <TextView
            android:id="@+id/cin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="8dp"
            android:text="Description.."
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@+id/nom" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Description.."
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="124dp"
            android:layout_height="21dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Adresse:"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_constraintEnd_toStartOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/nom" />

        <TextView
            android:id="@+id/specialite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:padding="8dp"
            android:text="Description.."
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="127dp"
            android:layout_height="19dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="Telephone:"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_constraintEnd_toStartOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/periode" />

        <TextView
            android:id="@+id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:padding="8dp"
            android:text="Description.."
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/specialite"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

    </GridLayout>
</androidx.cardview.widget.CardView>