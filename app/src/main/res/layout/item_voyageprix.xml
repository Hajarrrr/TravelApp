<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="13dp"
    app:cardBackgroundColor="#d6d7d7"
    app:cardElevation="8dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="4">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="Nom Agence:"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView21"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/nom_agence"
            android:layout_width="115dp"
            android:layout_height="42dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:padding="8dp"
            android:text="Title"
            android:textSize="18sp"
            android:textColor="#de9090"
            app:layout_constraintEnd_toStartOf="@+id/prix"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="167dp"
            android:layout_height="34dp"
            android:text="Prix:"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="8dp"
            android:text="Description.."
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView21"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:text="Destination:"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/prix" />

        <TextView
            android:id="@+id/destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Description.."
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
             />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="124dp"
            android:layout_height="21dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Periode:"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_constraintEnd_toStartOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/nom_agence" />

        <TextView
            android:id="@+id/periode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:padding="8dp"
            android:text="Description.."
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/destination"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="Nombre de places:"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/periode" />

        <TextView
            android:id="@+id/nombre_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:padding="8dp"
            android:text="Description.."
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/description"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="162dp"
            android:layout_height="19dp"
            android:text="Description:"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@+id/destination"
            />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Description.."
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView19"
            />
    </GridLayout>
</androidx.cardview.widget.CardView>